\begin{frame}{Australian approach  \cite{australian}}
\begin{center}
\begin{itemize}
\item Concetto chiave: Maturity level (from 0, the lowest, to 3, the higher) 
\item Qualità delle evidenze 
\begin{itemize}
\item Excellent: \textit{vengono utilizzate delle simulazioni }
\item Good: \textit{analisi della configurazione tramite l'interfaccia}
\item Fair: \textit{analisi della configurazione tramite una copia} 
\item Poor: \textit{una policy o una dichiarazione verbale}
\end{itemize}

\end{itemize}
\end{center}
\end{frame}


\begin{frame}{Fasi di una valutazione  \cite{australian}}
\begin{center}
\begin{itemize}
\item Stage 1: pianificazione e preparazione
\item Stage 2: determinazione dello scopo e del metodo
\item Stage 3: valutaizone dei controlli
\item Stage 4: emissione del report
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Stage 1: pianificazione e preparazione \cite{australian}}
\begin{center}
\begin{itemize}
\item classificazione del sistema
\item accesso a tutti gli account, dispositivi e documentazione
\item discussione con le parti interessate
\end{itemize}
\end{center}
\end{frame}


\begin{frame}{Stage 2: determinazione dello scopo e del metodo  \cite{australian}}
\begin{center}
\begin{itemize}
\item Discutere con il proprietario del sistema del livello di maturità d'interesse 
\item Discussione dei metodo con cui viene condotta la valutazione. I report, le interviste e gli screenshot sono da considerarsi sempre di classe inferiore rispetto all'utilizzo di script e tool
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Stage 3: valutazione delle misure di controllo  \cite{australian}}
\begin{center}
\begin{itemize}
\item Viene effettuata una valutazione della mitigation strategy valutando la sicurezza dei controlli 
\item L'approccio è cumulativo: il secondo livello estende il primo, e il terzo estende il secondo 
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Tipo di attaccante   \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: attaccante che usa bug noti, password rubate o brute force. Non cerca una vittima, ma attacca gruppi. Poco social engineering. Utilizza macro office. Parte da un account compromesso per la sua azione 
\item Livello 2: l'attaccante è disposto a investire una maggiore quantità di tempo. Viene usato il phishing e il social engineering in modo maggiore 
\item Livello 3: l'attaccante cerca una vulnerabilità, si focalizza su alcuni obiettivi e può distruggere i dati

\end{itemize}
\end{center}
\end{frame}



\begin{frame}{Ambiti controllati  \cite{australian}}
\begin{center}
\begin{itemize}
\item Application control 
\item Patch Application 
\item Configure Microsoft Office macro settings 
\item User application hardening 
\item Restrict adiministrative privileges 
\item Patch operating systems 
\item Multi-factor authentication 
\item Application control 

\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Application control \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: il lancio di eseguibili, software, librerie, script installer HTML compilati e applicativi HTML è impedita sulle workstation per gli suer standard e dalle directory temporanee usate dal sistema operativo 
\item Livello 2: il controllo delle applicazioni viene implementato sulle workstation e i servizi che si connettono ai server internet facing. L'esecuzione di quanto citato sopra è permesso è soggetto ad approvazione 
\item Livello 3: Al controllo delle applicazioni si aggiungono i server. Alla casistica precedente si aggiungono i driver 

\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Patch application \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1:  Utilizzo di un vulnerability scanner ogni 15 giorni. Verifica automatica del rilascio degli aggiornamenti. Rimozione di browser, PDF non più aggiornati  
\item Livello 2: Maggiore frequenza delle procedure del punto precedente
\item Livello 3: Maggiore frequenza del punto precedente, tutte le applicazioni non più supportate dal fornitore sono rimosse 

\end{itemize}
\end{center}
\end{frame}


\begin{frame}{Configurazione di Microsoft office \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1:  Disabilitazione delle macro per gli user che non hanno necessità di business; le macro dei file che si ottengono da internet sono bloccate; attivazione dell'antivirus per le macro di office; la configurazione di office non può essere modificata dagli utenti
\item Livello 2: le macro di office non possono chiamare Win32
API 

\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Configurazione di Microsoft office \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 3: le macro vanno eseguite in sandbox, solo utenti privligiati possono far si che le macro agiscano su trusted locations. Le macro firmate da autori sconosciuti non possono essere attivate da Message Bar o Backstage View. Aggiornamento annuale dei publisher fidati aggiornato. Log degli eventi (immodificabile)


\end{itemize}
\end{center}
\end{frame}

\begin{frame}{User application hardening \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: Viene impedita l'esecuzione di Java da web browser, explorer 11 non processa informazioni da internet e risulta impossibile modificare le impostazioni
\item Livello 2: Microsoft office e PDF non può creare processi child, eseguibil, iniezione di codice in altre app. Le impostazioni non possono essere modificate. I powershell bloccati sono loggati
\item Livello 3 Explorer 11, .NET 3.5 sono disabilitati o rimossi, power shell 2.0 bloccato o rimosso, log degli script di power shell. Log immodificabili e non rimuovibili  
\end{itemize}
\end{center}
\end{frame}


\begin{frame}{Restrict adiministrative privileges  \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: richiesta di privilegi quando l'applicazione vorrebbe utilizzarli, gli account privilegiati non possono connettersi a internet e relativi servizi, gli ambienti di utilizzo sono divisi fra user e privilegized user 
\item Livello 2: gli account privilegiati vanno riconvalidati ogni 12 mesi, sono disabilitati dopo 45 gg di inattività. Gli ambienti di utilizzo per gli user privilegiati non vengono virtualizzati dagli ambienti non privilegiati; password admin robuste; l'accesso degli account privilegiati è registrato
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Restrict adiministrative privileges  \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 3: Gli account privilegiati possono accedere solo agli app richiesti; attivazione di windows defender creditial guard e remote credential; gli accessi privilegiati sono loggati a livello centrale
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Patch operating systems
 \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: Scansione automatica vulnearbilità, gestione automatica, installazione entro 48h se viene segnalata una vulnearabilità, i restati aggiornamenti entro un mese. Rimpiazzo dei OS non più supportati
\item Livello 2: maggior freeuwnza di scansione, e applicazione entro due settimane degli aggiornamenti 
\item Livello 3: Utilizzo dell'ultimo OS
\end{itemize}
\end{center}
\end{frame}

\begin{frame}{Multi-factor authentication
 \cite{australian}}
\begin{center}
\begin{itemize}
\item Livello 1: MFA se i servizi si interfacciano con internet, o vi sono servizi di terze parti e user non dell'organizazione 
\item Livello 2: utilizzo MFA per account privilegiati, \textit{something users have and something users know, or something users have that is unlocked by something users know or are.}, Log delle autenticazioni (andate a buon fine o no)
\item Livello 3: MFA per accesso a dati importanti, 
\end{itemize}
\end{center}
\end{frame}



